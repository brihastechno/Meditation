<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:layout_margin="5dp"
        android:background="@drawable/region_dark_back" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_setting_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:drawableBottom="@drawable/activity_line"
                android:gravity="center_horizontal"
                android:text="@string/Setting"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/activity_line" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="top"
                android:orientation="vertical" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="none"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/region_dark_back" >

                            <TextView
                                android:id="@+id/textView_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="@string/rate_string"
                                android:textColor="@android:color/white"
                                android:textSize="30sp" />

                            <ImageView
                                android:id="@+id/imageView_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:contentDescription="@string/image_forward_arrow"
                                android:src="@drawable/icon_forward_arrow" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/region_dark_back" >

                            <TextView
                                android:id="@+id/textView_push"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="@string/push_string"
                                android:textColor="@android:color/white"
                                android:textSize="30sp" />

                            <ToggleButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:background="@drawable/btn_toggle"
                                android:textOff=""
                                android:textOn="" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/region_dark_back" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <FrameLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_gravity="top|left"
                                    android:layout_marginBottom="2dp" >

                                    <TextView
                                        android:id="@+id/textView_privacy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|center_vertical"
                                        android:layout_margin="5dp"
                                        android:text="@string/privacy_string"
                                        android:textColor="@android:color/white"
                                        android:textSize="30sp" />

                                    <ImageView
                                        android:id="@+id/imageView_privacy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:contentDescription="@string/image_forward_arrow"
                                        android:src="@drawable/icon_forward_arrow" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:background="@drawable/activity_line" >
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_gravity="top|left"
                                    android:layout_marginBottom="2dp" >

                                    <TextView
                                        android:id="@+id/textView_terms"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|center_vertical"
                                        android:layout_margin="5dp"
                                        android:text="@string/terms_string"
                                        android:textColor="@android:color/white"
                                        android:textSize="30sp" />

                                    <ImageView
                                        android:id="@+id/imageView_terms"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:contentDescription="@string/image_forward_arrow"
                                        android:src="@drawable/icon_forward_arrow" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:background="@drawable/activity_line" >
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_gravity="top|left"
                                    android:layout_marginBottom="2dp" >

                                    <TextView
                                        android:id="@+id/textView_version"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|center_vertical"
                                        android:layout_margin="5dp"
                                        android:text="@string/version_string"
                                        android:textColor="@android:color/white"
                                        android:textSize="30sp" />

                                    <ImageView
                                        android:id="@+id/imageView_version"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:contentDescription="@string/image_forward_arrow"
                                        android:src="@drawable/icon_forward_arrow" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:background="@drawable/activity_line" >
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>